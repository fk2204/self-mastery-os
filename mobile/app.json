{
  "expo": {
    "name": "Self-Mastery OS",
    "slug": "self-mastery-ios",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": false,
      "bundleIdentifier": "com.selfmastery.ios",
      "buildNumber": "1",
      "deploymentTarget": "15.0",
      "infoPlist": {
        "UIUserInterfaceStyle": "Dark",
        "NSLocalNetworkUsageDescription": "This app uses local network to sync data",
        "NSBonjourServiceTypes": [
          "_http._tcp",
          "_selfmastery._tcp"
        ],
        "UNUserNotificationCenter": true
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./src/assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./src/assets/notification-sound.wav"
          ],
          "modes": [
            "default"
          ]
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Inter-Regular.ttf",
            "./src/assets/fonts/Inter-Bold.ttf",
            "./src/assets/fonts/Inter-SemiBold.ttf"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "self-mastery-ios"
      }
    }
  }
}
